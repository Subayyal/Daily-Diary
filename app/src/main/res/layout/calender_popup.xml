<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="340dp"
    android:layout_height="300dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calender_month"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/large_text"/>

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendarview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            app:compactCalendarEventIndicatorStyle="small_indicator"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="12sp"
            app:compactCalendarBackgroundColor="#fff"
            app:compactCalendarTextColor="#000"
            app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarDisplayOtherMonthDays="false"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimaryLight"
            app:compactCalendarCurrentDayBackgroundColor="#dadfe8"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>